{
	"name": "ipv-pint-2023",
	"scripts": {
		"fmt": "pnpm format",
		"format": "prettier -u --write \"**/*\"",
		"server": "pnpm -C server",
		"web": "pnpm -C web"
	},
	"prettier": {
		"plugins": [
			"prettier-plugin-tailwindcss",
			"@prettier/plugin-xml"
		],
		"printWidth": 120,
		"trailingComma": "all",
		"useTabs": true
	},
	"devDependencies": {
		"@prettier/plugin-xml": "^2.2.0",
		"prettier": "^2.8.8"
	},
	"packageManager": "pnpm@8.6.0",
	"engines": {
		"node": "18"
	}
}
