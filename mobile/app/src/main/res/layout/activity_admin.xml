<?xml version="1.0" encoding="utf-8" ?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".pages.AdminActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toTopOf="@+id/bottombar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Beneficios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/rounded"
                android:drawableEnd="@drawable/arrow_right"
                android:onClick="gotoAdminBeneficios"
                android:paddingVertical="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="Beneficios"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/Candidaturas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/rounded"
                android:drawableEnd="@drawable/arrow_right"
                android:onClick="gotoAdminCandidaturas"
                android:paddingVertical="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="Candidaturas"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Beneficios" />

            <TextView
                android:id="@+id/Ideias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/rounded"
                android:drawableEnd="@drawable/arrow_right"
                android:onClick="gotoAdminIdeias"
                android:paddingVertical="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="Ideias"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Candidaturas" />

            <TextView
                android:id="@+id/Mensagens"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/rounded"
                android:drawableEnd="@drawable/arrow_right"
                android:onClick="gotoAdminMensagens"
                android:paddingVertical="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="Mensagens"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Ideias" />

            <TextView
                android:id="@+id/Negocios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/rounded"
                android:drawableEnd="@drawable/arrow_right"
                android:onClick="gotoAdminNegocios"
                android:paddingVertical="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="@string/Oportunidades"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Mensagens" />


            <TextView
                android:id="@+id/Reporting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/rounded"
                android:drawableEnd="@drawable/arrow_right"
                android:onClick="gotoAdminReporting"
                android:paddingVertical="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="Reporting"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Negocios" />

            <TextView
                android:id="@+id/Reunioes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/rounded"
                android:drawableEnd="@drawable/arrow_right"
                android:onClick="gotoAdminReunioes"
                android:paddingVertical="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="ReuniÃµes"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Reporting" />


            <TextView
                android:id="@+id/Utilizador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/rounded"
                android:drawableEnd="@drawable/arrow_right"
                android:onClick="gotoAdminUtilizadores"
                android:paddingVertical="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="Utilizadores"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Reunioes" />

            <TextView
                android:id="@+id/Vaga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="67dp"
                android:background="@drawable/rounded"
                android:drawableEnd="@drawable/arrow_right"
                android:onClick="gotoAdminVagas"
                android:paddingVertical="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="Vagas"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Utilizador" />
        </LinearLayout>

    </ScrollView>

    <include
        layout="@layout/bottombar"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
