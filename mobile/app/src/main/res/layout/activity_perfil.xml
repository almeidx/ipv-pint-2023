<?xml version="1.0" encoding="utf-8" ?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C5CAE9"
    tools:context=".pages.PerfilActivity">

    <TextView
        android:id="@+id/nomeUser"
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:background="@color/white"
        android:paddingStart="10dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/emailUser"
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:background="@color/white"
        android:paddingStart="10dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nomeUser" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toTopOf="@+id/emailUser"
        app:layout_constraintTop_toBottomOf="@+id/password" />

    <TextView
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:drawableStart="@drawable/lock"
        android:drawablePadding="10dp"
        android:gravity="left|center"
        android:paddingStart="10dp"
        android:text="@string/mudar_password"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailUser" />

    <View
        android:id="@+id/divider7"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toTopOf="@+id/password"
        app:layout_constraintTop_toBottomOf="@+id/verCv" />


    <TextView
        android:id="@+id/verCv"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:drawableStart="@drawable/cv"
        android:drawablePadding="10dp"
        android:gravity="left|center"
        android:paddingStart="10dp"
        android:text="Ver CV atual"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:onClick="verCv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password" />

    <View
        android:id="@+id/divider6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toTopOf="@+id/verCv"
        app:layout_constraintTop_toBottomOf="@+id/cv" />

    <TextView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:drawableStart="@drawable/cv"
        android:drawablePadding="10dp"
        android:gravity="left|center"
        android:paddingStart="10dp"
        android:text="@string/enviar_cv"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:onClick="enviarCv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/verCv" />

    <View
        android:id="@+id/divider5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toTopOf="@+id/cv"
        app:layout_constraintTop_toBottomOf="@+id/inativar_conta" />

    <TextView
        android:id="@+id/inativar_conta"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:drawableStart="@drawable/baseline_delete_24"
        android:drawablePadding="10dp"
        android:gravity="left|center"
        android:paddingStart="10dp"
        android:text="@string/desativar_conta"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:onClick="inativarConta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv" />

    <View
        android:id="@+id/divider4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toTopOf="@+id/admin"
        app:layout_constraintTop_toBottomOf="@+id/inativar_conta" />

    <TextView
        android:id="@+id/admin"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:drawableStart="@drawable/admin_logo"
        android:drawablePadding="10dp"
        android:drawableTint="@color/black"
        android:gravity="left|center"
        android:paddingStart="10dp"
        android:text="@string/painel_admin"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inativar_conta" />

    <Button
        android:id="@+id/terminar_sessao"
        style="@style/Widget.Material3.Button"
        android:layout_width="200dp"
        android:layout_height="52dp"
        android:layout_marginStart="39dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="67dp"
        android:backgroundTint="@color/white"
        android:onClick="terminarSessao"
        android:text="@string/terminar_sessÃ£o"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

    <include layout="@layout/bottombar" />
</androidx.constraintlayout.widget.ConstraintLayout>
