<?xml version="1.0" encoding="utf-8" ?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/bg"
	android:orientation="vertical"
	tools:context=".pages.admin.AdminBeneficiosActivity"
>

    <LinearLayout
		android:id="@+id/linearPesquisa"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginStart="25dp"
		android:layout_marginTop="25dp"
		android:layout_marginEnd="25dp"
		android:orientation="horizontal"
		app:layout_constraintEnd_toStartOf="@+id/include3"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
	>

        <com.google.android.material.textfield.TextInputLayout
			android:id="@+id/textInputLayout"
			style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
			android:layout_width="270dp"
			android:layout_height="64dp"
			android:hint="@string/pesquise_por_beneficios"
			app:boxBackgroundColor="@color/white"
			app:boxStrokeColor="@color/black"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toTopOf="parent"
		>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/pesquisa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/search"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:drawablePadding="2dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
			android:id="@+id/criarBeneficio"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_marginLeft="25dp"
			android:onClick="criarBeneficio"
			android:src="@drawable/add"
		/>
    </LinearLayout>


    <ListView
		android:id="@+id/listaBeneficios"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginStart="25dp"
		android:layout_marginTop="110dp"
		android:layout_marginEnd="25dp"
		android:layout_marginBottom="67dp"
		android:divider="@android:color/transparent"
		android:dividerHeight="20dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/linearPesquisa"
		app:layout_constraintVertical_bias="0.0"
	/>

    <include android:id="@+id/include3" layout="@layout/bottombar" />
</androidx.constraintlayout.widget.ConstraintLayout>
