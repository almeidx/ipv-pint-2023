<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/opcoes"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:background="@drawable/bottom_sheet_dialog"
	android:gravity="center"
	android:orientation="vertical"
>

    <LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
	>

        <LinearLayout
			android:id="@+id/beneficio"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:clickable="true"
			android:focusable="true"
			android:gravity="center"
			android:orientation="vertical"
			android:padding="20dp"
			android:layout_marginStart="15dp"
		>

            <ImageView
				android:layout_width="52dp"
				android:layout_height="52dp"
				android:contentDescription="@string/email"
				android:src="@drawable/trophy"
				app:tint="@color/white"
			/>

            <TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/Benefícios"
				android:textColor="@color/white"
				android:textSize="13sp"
			/>

        </LinearLayout>

        <LinearLayout
			android:id="@+id/vagas"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:clickable="true"
			android:focusable="true"
			android:gravity="center"
			android:orientation="vertical"
			android:padding="20dp"
		>

            <ImageView
				android:layout_width="52dp"
				android:layout_height="50dp"
				android:contentDescription="@string/email"
				android:src="@drawable/vagas"
				app:tint="@color/white"
			/>

            <TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/Vagas"
				android:textColor="@color/white"
				android:textSize="13sp"
			/>

        </LinearLayout>

        <LinearLayout
			android:id="@+id/negocio"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:clickable="true"
			android:focusable="true"
			android:gravity="center"
			android:orientation="vertical"
			android:padding="20dp"
		>

            <ImageView
				android:layout_width="52dp"
				android:layout_height="50dp"
				android:contentDescription="@string/email"
				android:src="@drawable/negocio"
				app:tint="@color/white"
			/>

            <TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/Oportunidades"
				android:textColor="@color/white"
				android:textSize="13sp"
			/>

        </LinearLayout>

    </LinearLayout>

    <TextView
		android:layout_width="250dp"
		android:layout_height="2dp"
		android:layout_marginStart="20dp"
		android:layout_marginEnd="20dp"
		android:background="@color/white"
	/>

    <LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:orientation="horizontal"
	>

        <LinearLayout
			android:id="@+id/contacto"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:clickable="true"
			android:focusable="true"
			android:gravity="center"
			android:orientation="vertical"
			android:padding="20dp"
		>

            <ImageView
				android:layout_width="52dp"
				android:layout_height="52dp"
				android:contentDescription="@string/email"
				android:src="@drawable/baseline_local_phone_24"
				app:tint="@color/white"
			/>

            <TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/contacto"
				android:textColor="@color/white"
				android:textSize="13sp"
			/>

        </LinearLayout>

        <LinearLayout
			android:id="@+id/ideia"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:clickable="true"
			android:focusable="true"
			android:gravity="center"
			android:orientation="vertical"
			android:padding="20dp"
		>

            <ImageView
				android:layout_width="52dp"
				android:layout_height="52dp"
				android:contentDescription="@string/email"
				android:src="@drawable/ideias"
				app:tint="@color/white"
			/>

            <TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/Ideias"
				android:textColor="@color/white"
				android:textSize="13sp"
			/>

        </LinearLayout>

        <LinearLayout
			android:id="@+id/calendario"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:clickable="true"
			android:focusable="true"
			android:gravity="center"
			android:orientation="vertical"
			android:padding="20dp"
			android:layout_marginStart="10dp"
		>

            <ImageView
				android:layout_width="52dp"
				android:layout_height="52dp"
				android:contentDescription="@string/email"
				android:src="@drawable/calendar"
				app:tint="@color/white"
			/>

            <TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/Calendário"
				android:textColor="@color/white"
				android:textSize="13sp"
			/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
